{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
		"emitDeclarationOnly": false,
		"forceConsistentCasingInFileNames": true,
		"types": ["node"]
	},
	"include": ["src/**/*.ts"],
	"references": [
    {
      "path": "../reporter/tsconfig.lib.json"
    },
    {
      "path": "../assertions/tsconfig.lib.json"
    },
    {
      "path": "../http/tsconfig.lib.json"
    },
    {
      "path": "../environment/tsconfig.lib.json"
    },
    {
      "path": "../variables/tsconfig.lib.json"
    },
    {
      "path": "../parser/tsconfig.lib.json"
    },
    {
      "path": "../types/tsconfig.lib.json"
    }
  ],
	"exclude": [
		"vite.config.ts",
		"vite.config.mts",
		"vitest.config.ts",
		"vitest.config.mts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.tsx",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"src/**/*.test.jsx",
		"src/**/*.spec.jsx"
	]
}
