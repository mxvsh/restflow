{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
		"emitDeclarationOnly": false,
		"forceConsistentCasingInFileNames": true,
		"types": ["node"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts", "src/**/*.spec.ts"],
	"references": [
    {
      "path": "../types/tsconfig.lib.json"
    }
  ]
}
